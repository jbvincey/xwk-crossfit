<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alertdialog_boublebutton_title"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:background="@color/red1"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/alertdialog_boublebutton_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:background="@color/darkgray"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/alertdialog_doublebutton_button2"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_alertdialog"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="20sp" />
        
        <Button
            android:id="@+id/alertdialog_doublebutton_button1"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_alertdialog"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>