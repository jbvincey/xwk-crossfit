<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgray"
    android:orientation="vertical" >

    <!--
        <TextView
        style="@style/form_text"
        android:text="@string/add_name" />
    -->

    <EditText
        android:id="@+id/add_crossfitworkout_name"
        style="@style/form_edittext"
        android:layout_marginTop="24dp"
        android:hint="@string/add_name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:textSize="20sp" />

    <!--
          <TextView
        style="@style/form_text"
        android:text="@string/add_description" />
    -->

    <EditText
        android:id="@+id/add_crossfitworkout_description"
        style="@style/form_edittext"
        android:layout_marginTop="24dp"
        android:hint="@string/add_description"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/add_crossfitworkout_sets"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:padding="8dp"
        android:text="@string/number_of_sets"
        android:textColor="@color/lightgray1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addworkout_addexercise_button"
        android:layout_width="192dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/buttonselector"
        android:text="@string/add_crossfitworkout_addexercise"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/addworkout_exercise_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:divider="@android:color/transparent"
        android:drawSelectorOnTop="false"
        android:overScrollMode="never" />

    <!--
          android:dividerHeight="6dp"
            android:padding="6dp"
    -->

</LinearLayout>