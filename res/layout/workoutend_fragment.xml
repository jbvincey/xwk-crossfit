<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgray"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/workoutend_fragment_title"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="@color/red1"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/workoutend_fragment_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/workoutend_fragment_comment"
        style="@style/form_edittext"
        android:hint="@string/comment"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:layout_margin="16dp"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/workoutend_fragment_button"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:layout_margin="0dp"
        android:background="@drawable/button_alertdialog"
        android:text="OK"
        android:textColor="@color/white" />

</LinearLayout>