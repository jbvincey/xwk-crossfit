<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionButtonStyle">@style/customActionButton</item>
        <item name="android:actionBarItemBackground">@drawable/actionbaritembackground</item>
    </style>
    
    <!-- Application theme. -->
    <style name="AppThemeDark" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionButtonStyle">@style/customActionButton</item>
        <item name="android:actionBarItemBackground">@drawable/actionbaritembackground</item>
    </style>
    
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/red1</item>
        <item name="android:titleTextStyle">@style/customTitleTextColor</item>
    </style>

    <style name="customActionButton" parent="android:style/Widget.Holo.Light.ActionButton">
        <item name="android:background">@drawable/actionbaritembackground</item>
    </style>

    <style name="customTitleTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="big_text_list" parent="android:Theme.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="small_text_list" parent="android:Theme.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9a9a9a</item>
    </style>

    <style name="form_edittext" parent="android:Theme.Holo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:minWidth">192dp</item> -->
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">#e9e9e9</item>
        <item name="android:background">@drawable/textfield</item>
    </style>

    <style name="form_text" parent="form_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/list_section_divider_holo_light_red</item>
        <item name="android:textColor">#E8A7A7</item>
    </style>

    <color name="white">#FFFFFF</color>
    <color name="blue">#33b5e5</color>
    <color name="lightgray0">#f0f0f0</color>
    <color name="lightgray1">#e9e9e9</color>
    <color name="lightgray2">#b8b8b8</color>
    <color name="lightgray3">#d3d3d3</color>
    <color name="gray">#9a9a9a</color>
    <color name="darkgray">#444444</color>
    <color name="darkgray2">#232323</color>
    <color name="darkgray3">#555555</color>
    <color name="red1">#e36060</color>
    <color name="red2">#963131</color>
    <color name="red3">#E8A7A7</color>
    <color name="red32">#f8cbcb</color>
    <color name="red4">#bc3e3e</color>
    <color name="transparent">#00ffffff</color>
    <color name="white_transparent">#E6FFFFFF</color>
    <color name="blue_transparent">#A633B5E5</color>
    <color name="orange1">#e87b5c</color>
    <color name="orange2">#eb8c59</color>
    <color name="orange3">#ef9a57</color>
    <color name="orange4">#f0a156</color>
    <color name="purple1">#B859F0</color>

</resources>